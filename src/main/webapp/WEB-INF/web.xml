<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>Search</servlet-name>
        <servlet-class>controller.Search</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignIn</servlet-name>
        <servlet-class>controller.SignIn</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignOut</servlet-name>
        <servlet-class>controller.SignOut</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SampleCount</servlet-name>
        <servlet-class>controller.SampleCount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IndexJSP</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>AboutJSP</servlet-name>
        <jsp-file>/about.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>TermsJSP</servlet-name>
        <jsp-file>/terms.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>ContactJsp</servlet-name>
        <jsp-file>/contact.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>SignInJsp</servlet-name>
        <jsp-file>/signin.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Search</servlet-name>
        <url-pattern>/Search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignIn</servlet-name>
        <url-pattern>/SignIn</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignOut</servlet-name>
        <url-pattern>/SignOut</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SampleCount</servlet-name>
        <url-pattern>/SampleCount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IndexJSP</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AboutJSP</servlet-name>
        <url-pattern>/about</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TermsJSP</servlet-name>
        <url-pattern>/terms</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ContactJsp</servlet-name>
        <url-pattern>/contact</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignInJsp</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>404</error-code>
        <location>/error.jsp</location>
    </error-page>
</web-app>
